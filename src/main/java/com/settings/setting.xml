<?xml version="1.0" encoding="UTF-8"?>

<setting>
	<window>
		<font>
			<name>楷体</name>
			<!--	type参数说明
						0   普通字体 PLAIN
						1   加粗  BOLD
						2   斜体  ITALIC
						3   加粗斜体
				-->
			<type>0</type>
			<size>18</size>
		</font>
		<!--
			style 参数说明
			com.sun.java.swing.plaf.windows.WindowsLookAndFeel  windows风格
			com.sun.java.swing.plaf.windows.WindowsClassicLookAndFeel   windowsclassic风格
			com.sun.java.swing.plaf.motif.MotifLookAndFeel  Motif风格
			javax.swing.plaf.metal.MetalLookAndFeel   Metal风格(swing默认)
		-->
		<style>com.sun.java.swing.plaf.windows.WindowsLookAndFeel</style>
	</window>
</setting>
